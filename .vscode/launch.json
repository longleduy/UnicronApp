{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/server.js",
            "protocol": "inspector",
            "stopOnEntry": false,
            "runtimeArgs": [
                "--lazy",
                "--require",
                "@babel/register"
            ],
            "sourceMaps": true,
            "smartStep": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch ReactJs Debug",
            "url": "https://localhost:8086",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "restart": true,
            "args": ["test/mainTestTDD.js", "--no-timeouts"],
            "protocol": "inspector",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "--require",
                "babel-register"
            ],
            "env": { "NODE_ENV": "test"},
            "sourceMaps": true,
            "smartStep": true
        }
    ]
}